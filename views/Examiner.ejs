<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header') -%>

<body>

  <%- include('layouts/navbar') -%>
  <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">

  <main id="main">
    <section class="contact aos-init aos-animate">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-6">
            <table id="myTable" class="display">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Username</th>
                  <th>Test Type</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% for(let i=0;i<user.length;i++){ %>
                <tr>
                  <td>
                    <%= user[i].firstname+" "+user[i].lastname %></td>
                  <td><%= user[i].username %></td>
                  <td><%= user[i].TestType %> Test</td>
                  <td>
                    <button type=" button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal<%=[i]%>">
                      edit
                    </button>

                    <div class="modal fade" id="myModal<%=[i]%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modal Title</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            <table>
                              <thead>
                                <tr>
                                  <th>First Name</th>
                                  <th>Last Name</th>
                                  <th>Age</th>
                                  <th>Car Make</th>
                                  <th>Model</th>
                                  <th>Manufacturing Year</th>
                                  <th>Plate Number</th>
                                </tr>
                              </thead>
                              <tbody>
                                <tr>
                                  <td><%=user[i].firstname%></td>
                                  <td><%=user[i].lastname%></td>
                                  <td><%=user[i].age%></td>
                                  <td><%=user[i].car_details.make%></td>
                                  <td><%=user[i].car_details.model%></td>
                                  <td><%=user[i].car_details.year%></td>
                                  <td><%=user[i].car_details.plate_number%></td>
                                </tr>
                              </tbody>
                            </table>
                          </div>
                          <form action="/result/<%= user[i]._id %>" method="post" class="examiner-form">
                            <label for="select_result">Result:</label>
                            <select class="form-select select-result" name="select_result" id="select_result" required="">
                              <option disabled selected value="">
                                -- Select Result --
                              </option>
                              <option value="true">Pass</option>
                              <option value="false">Fail</option>
                            </select>
                            <div class="col-md-6 form-group mt-3 mt-md-0 inputDiv">
                              <label for="comment">Comment:</label>
                              <textarea class="form-control" id="comment" name="comment" required=""></textarea>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                              <button type="submit" class="btn btn-primary">Save </button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>

                  </td>
                </tr>

                <%}%>

                  </tbody>

                </table>

              </div>
            </div>
          </div>
        </section>
      </main>

      <%- include('layouts/footer') -%>

                <%- include('layouts/scripts') -%>
                <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
                <script>
                  $(document).ready(function() {
                    $('#myTable').DataTable();
                  });
                </script>

</body>

</html>